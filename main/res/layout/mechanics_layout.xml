<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"> <!-- Transparent background -->

    <!-- Dimmed background overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"/> <!-- Semi-transparent black -->

    <!-- Centered menu background -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/menuBackground"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_centerInParent="true"
            android:src="@drawable/menubackground"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:id="@+id/mechanicsCloseButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignEnd="@id/menuBackground"
            android:layout_alignTop="@id/menuBackground"
            android:layout_marginRight="40dp"
            android:layout_marginTop="35dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:src="@drawable/returnbutton"
            android:background="@null"
            android:contentDescription="Close Menu"/>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:src="@drawable/howtoplaybutton"
            android:background="@null"
            android:contentDescription="Close Menu"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:fontFamily="@font/fontttt"
            android:textColor="#5ae38e"
            android:layout_marginTop="100dp"
            android:layout_centerHorizontal="true"
            android:text="Tapikin ang prutas, gulay, at bulaklak para makakuha ng puntos."/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:fontFamily="@font/fontttt"
            android:textColor="#5ae38e"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="125dp"
            android:text="Iwasan ang peste! Huwag silang tapikin!"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:fontFamily="@font/fontttt"
            android:textColor="#5ae38e"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"
            android:text="Mawawalan ka ng buhay sa pesteng matapik o sa nahulog na ani."/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:fontFamily="@font/fontttt"
            android:textColor="#5ae38e"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="175dp"
            android:text="Dumadami ang peste at bumibilis ang pagbagsak ng ani."/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:fontFamily="@font/fontttt"
            android:textColor="#5ae38e"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp"
            android:text="Mayroon kang 3 buhay. Kapag naubos lahat, tapos na ang laro."/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:fontFamily="@font/fontttt"
            android:textColor="#5ae38e"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="225dp"
            android:text="Magsikap makakuha ng mataas na puntos at iligtas ang ani!"/>

    </RelativeLayout>

</FrameLayout>
